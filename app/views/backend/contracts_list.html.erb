<% 

	@pageheader = "ACTIVE CONTRACTS"
	@pageheader_subtitle = "Manage Contracts"

	@new_contract_selected = "selected"
	@new_contract_active = "active"
	
%>

	<div class="row">
	

		<div class="col-sm-12">

			<div class="panel panel-default" style="position: static; zoom: 1;">
				<div class="panel-heading">
					<i class="fa fa-external-link-square"></i>
					ACTIVE CONTRACTS
					<div class="panel-tools">
						
					</div>
				</div>
				<div class="panel-body" style="display: block;">

					<table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
						<thead>
							
							<td>Property </td>
							<td>Room #</td>
							<td>Amount</td>

							<% if session[:user_type] == "Landlord" %>
								 <td>Tenant </td>
							<% end %>

							<% if session[:user_type] == "Tenant" %>
								<td>Landlord </td>
							<% end %>


							<td>Date </td>
							<td align="center" width="20%">Actions</td>

						</thead>

						
						<% @contracts.each do |cont| %>
							<tr>
								<td>
									<%= cont.property.name_of_building %>
								</td>
								<td>
									<%= cont.room_no %>
								</td>
								<td>
									<%= cont.rental_amount %>
								</td>
								<td>
								<% if session[:user_type] == "Landlord" %>
									<%= cont.tenant.last_name + ', ' + cont.tenant.first_name %>
								<% end %>
								
								<% if session[:user_type] == "Tenant" %>
									<%= cont.landlord.last_name + ', ' + cont.landlord.first_name %>
								<% end %>	
								</td>
								<td>
									<%= cont.start_date %> to <%= cont.end_date %>
								</td>
								<td align="center">
												<a class="btn btn-primary" href="/contract/<%= cont.id %>/view"><i class="fa fa-eye fa fa-white"></i></a> 
												
												<% if session[:user_type] == "Landlord" %>
												<a class="btn btn-primary" href="/contract/<%= cont.id %>/edit"><i class="fa fa-pencil fa fa-white"></i></a> 
												<% end %>
												
												<a class="btn btn-bricky" href="/contract/<%= cont.id %>/delete"><i class="glyphicon glyphicon-remove-circle"></i></a> 
								</td>
							</tr>
						<% end %>

					</table>

					
				</div>

			</div>
		</div>

		

		

	</div>
