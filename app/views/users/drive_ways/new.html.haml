.row
  .col-sm-7
    .panel.panel-default
      .panel-heading
        Create Drives
      .panel-body
        = simple_nested_form_for [:users, @drive_way], html: { class: 'form-horizontal' }, role: "form" do |f|
          = render partial: 'form', locals: { f: f }
  .col-sm-5
    .panel.panel-default
      .panel-heading
        My Properties
      .panel-body
        %table.table.table-striped.table-bordered.table-hover
          %thead
            %tr
              %th Name
              %th Actions
          %tbody
            - @drive_ways.each do |drive|
              %tr
                %td= drive.name
                %td
                  = link_to 'edit drives', edit_users_drive_way_path(drive), class: 'btn btn-primary'

/ %h1 New users_drive_way
/ = form_for @users_drive_way, url: users_drive_ways_path do |f|
/   = render partial: 'form', locals: { f: f }

/ = link_to 'Back', users_drive_ways_path
